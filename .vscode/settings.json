{
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.testing.cwd": "${workspaceFolder}/functions",
    "autoDocstring.docstringFormat": "sphinx",
    "flake8.args": [
        "--max-line-length=100",
    ],
    "pylint.args": [
        "--max-line-length=100",
        "--disable=C0116,C0115"
    ],
}
